@model Dish

<div>
    <h1 class="text-center">Add a Dish!</h1>
    <form action="/dishes/new" method="post" class="mt-3">
        <div class="d-flex gap-3 align-items-center mt-3">
            <label class="col-3 p-0" asp-for="Name"></label>
            <input asp-for="Name" class="form-control">
        </div>
        <span asp-validation-for="Name" class="text-danger"></span>
        <div class="d-flex gap-3 align-items-center mt-3">
            <label class="col-3 p-0" asp-for="NumCalories"></label>
            <input asp-for="NumCalories" class="form-control">
        </div>
        <span asp-validation-for="NumCalories" class="text-danger"></span>
        <div class="d-flex gap-3 align-items-center mt-3">
            <label class="col-3 p-0" asp-for="ChefId"></label>
            <select asp-for="ChefId" class="form-select">
                <option value="">----</option>
            </select>
        </div>
        <span asp-validation-for="ChefId" class="text-danger"></span>
        <div class="d-flex gap-3 align-items-center mt-3">
            <label class="col-3 p-0" asp-for="Tastiness"></label>
            <select asp-for="Tastiness" class="form-select">
                <option value="">----</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
        </div>
        <span asp-validation-for="Tastiness" class="text-danger"></span>
        <div class="d-flex gap-3 align-items-center mt-3">
            <label class="col-3 p-0" asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>
        <span asp-validation-for="Description" class="text-danger"></span>
        <div class="d-flex justify-content-center"><input type="submit" value="Add Dish" class="btn btn-info mt-3"></div>
    </form>
</div>