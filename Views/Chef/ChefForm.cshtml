@model Chef

<div>
    <h1 class="text-center">Add a Chef!</h1>
    <form action="/chefs/new" method="post" class="mt-3">
        <div class="d-flex gap-3 align-items-center mt-3">
            <label class="col-3 p-0" asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control">
        </div>
        <span asp-validation-for="FirstName" class="text-danger"></span>
        <div class="d-flex gap-3 align-items-center mt-3">
            <label class="col-3 p-0" asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control">
        </div>
        <span asp-validation-for="LastName" class="text-danger"></span>
        <div class="d-flex justify-content-center"><input type="submit" value="Add Chef" class="btn btn-info mt-3"></div>
    </form>
</div>