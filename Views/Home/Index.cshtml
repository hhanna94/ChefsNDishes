@{
    ViewData["Title"] = "Home Page";
}
@model List<Chef>

<div class="d-flex justify-content-between align-items-center">
    <h6>Check out our roster of Chefs!</h6>
    <a href="/chefs/new">Add a Chef</a>
</div>
<hr>
<table class="table table-secondary table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th># of Dishes</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var chef in Model)
        {
        <tr>
            <td>@chef.FirstName @chef.LastName</td>
            <td>@chef.CreatedDishes.Count</td>
            <td><a href=@($"/chefs/{chef.Id}/edit")>Edit</a> | <a href=@($"/chefs/{chef.Id}/delete")>Delete</a></td>
        </tr>
        }
    </tbody>
</table>
